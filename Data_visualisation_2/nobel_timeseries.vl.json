{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":{"text":"Money Prize per Nobel laureates from 1901 to 2021",
"anchor": "middle"},
  "data": {
    "url": "https://raw.githubusercontent.com/yvesypher/S2-2022-FIT3179/main/Data_visualisation_2/data/nobel_lc_data.csv"
  },
  "vconcat": [
    {
      "encoding": {
        "x": {
          "field": "awardYear",
          "type": "temporal",
          "timeUnit": "year",
          "scale": {"domain": {"param": "brush"}},
          "title": null
        }
      },
      "layer": [
        {
          "width": 480,
          "height": 250,
          "encoding": {
            "color": {
              "field": "category",
              "type": "nominal",
              "scale": {
                "range": [
                  "#F28E28",
                  "#5fa2ce",
                  "#EDC948",
                  "#E15759",
                  "#58508d",
                  "#D7B5A6"
                ]
              },
              "legend": {
                "title": "Category",
                "titleOrient":"left",
                "orient": "none",
                "direction": "horizontal",
                "legendY": 430,
                "legendX": -60
              }
            },
            "y": {
              "aggregate": "sum",
              "field": "adjustedUSDPrizePerLaureate",
              "type": "quantitative",
              "title": "Money Prize ($USD)"
            }
          },
          "layer": [
            {
              "mark": {
                "type": "area",
                "line": {
                  "color": "darkgreen",
                  "fillOpacity": 0.8,
                  "strokeOpacity": 0.8
                }
              }
            },
            {
              "transform": [{"filter": {"param": "hover", "empty": false}}],
              "mark": "point"
            }
          ]
        },
        {
          "transform": [
            {
              "pivot": "category",
              "value": "adjustedUSDPrizePerLaureate",
              "groupby": ["awardYear"]
            }
          ],
          "mark": "rule",
          "encoding": {
            "opacity": {
              "condition": {"value": 0.5, "param": "hover", "empty": false},
              "value": 0
            },
            "tooltip": [
              {
                "field": "awardYear",
                "type": "temporal",
                "timeUnit": "year",
                "title": "Year"
              },
              {
                "field": "Chemistry",
                "type": "quantitative",
                "format": ".2f",
                "title": "Adjusted money prize for 2021 per Chemistry laureate "
              },
              {
                "field": "Literature",
                "type": "quantitative",
                "format": ".2f",
                "title": "Adjusted money prize for 2021 per Literature laureate"
              },
              {
                "field": "Economic Sciences",
                "type": "quantitative",
                "format": ".2f",
                "title": "Adjusted money prize for 2021 per Economic Sciences laureate"
              },
              {
                "field": "Peace",
                "type": "quantitative",
                "format": ".2f",
                "title": "Adjusted money prize for 2021 per Peace laureate"
              },
              {
                "field": "Physics",
                "type": "quantitative",
                "format": ".2f",
                "title": "Adjusted money prize for 2021 per Physics laureate"
              },
              {
                "field": "Physiology or Medicine",
                "type": "quantitative",
                "format": ".2f",
                "title": "Adjusted money prize for 2021 per Physiology or Medicine laureate"
              }
            ]
          },
          "params": [
            {
              "name": "hover",
              "select": {
                "type": "point",
                "fields": ["awardYear"],
                "nearest": true,
                "on": "mouseover",
                "clear": "mouseout"
              }
            }
          ]
        }
      ]
    },
    {
      "width": 480,
      "height": 80,
      "mark": "line",
      "params": [
        {"name": "brush", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {"field": "awardYear", "type": "temporal", "title": "Year"},
        "y": {
          "field": "adjustedUSDPrizePerLaureate",
          "type": "quantitative",
          "axis": {"tickCount": 3, "grid": false},
          "title": "Money Prize ($USD)"
        },
        "color": {"value": "#7b848f"}
      }
    }
  ],
  "config": {}
}