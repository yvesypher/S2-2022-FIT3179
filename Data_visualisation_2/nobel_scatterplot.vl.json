{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Nobel Laureates by University",
  "width": 300,
  "height": 200,
  "description": "A scatterplot showing horsepower and miles per gallons that opens a Google search for the car that you click on.",
  "data": {
    "url": "https://raw.githubusercontent.com/yvesypher/S2-2022-FIT3179/main/Data_visualisation_2/data/nobel_scatterplot_data.csv"
  },
  "mark": {"type": "point", "filled": true},
  "encoding": {
    "x": {
      "field": "worldRanking",
      "type": "quantitative",
      "title": "World Ranking",
      "sort": "descending"
    },
    "y": {
      "field": "noOfNobelLaureates",
      "type": "quantitative",
      "title": "Number of Nobel Laureates"
    },
    "color": {"field": "country", "type": "nominal", "title": "Country", "scale":{"range": ["#66c2a5", "#fc8d62", "#8da0cb", "#e78ac3", "#a6d854"]}},
    "tooltip": [
      {"field": "university", "type": "nominal", "title": "University"},
      {"field": "country", "type": "nominal", "title": "Country"},
      {
        "field": "noOfNobelLaureates",
        "type": "nominal",
        "title": "Number of Nobel Laureates"
      },
      {"field": "worldRanking", "type": "nominal", "title": "World Ranking"}
    ]
  },
  "config": {}
}