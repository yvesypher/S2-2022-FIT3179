{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text":"Nobel Laureates by category (1901 - 2021)","fontSize":15},
  "width": 480,
  "height": 250,
  "background":"transparent",
  "padding":{"left": 35, "top":5},
  "data": {
    "url": "https://raw.githubusercontent.com/yvesypher/S2-2022-FIT3179/main/Data_visualisation_2/data/nobel_stackedbar_data.csv"
  },
  "layer": [
    {
      "params": [
        {
          "name": "prizeshare_highlight",
          "select": {
            "type": "point",
            "fields": [
              "prizeShare"
            ]
          },
          "bind": "legend"
        }
      ],
      "mark": "bar",
      "encoding": {
        "x": {
          "aggregate": "count",
          "field": "prizeShare",
          "title": "Number of Nobel Laureates",
          "axis": {"titleFontSize": 12, "domainColor":"#D6AD60"}
        },
        "y": {
          "field": "category",
          "title": "Category",
          "axis": {"titleFontSize": 12, "domainColor":"#D6AD60"}
        },
        "color": {
          "field": "prizeShare",
          "title": "Prize Share",
          "legend": {
            "padding":4,
            "title": "Category",
            "titleAnchor":"middle",
            "orient": "none",
            "direction": "vertical",
            "legendY": 75,
            "legendX": 329.5
          }
        },
        "opacity": {
          "condition": {
            "param": "prizeshare_highlight",
            "value": 0.9
          },
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "category",
            "type": "nominal",
            "title": "Category"
          },
          {
            "field": "prizeShare",
            "type": "nominal",
            "title": "Prize Share"
          },
          {
            "aggregate": "count",
            "field": "prizeShare",
            "type": "quantitative",
            "title": "Number of Nobel Laureates"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 3
      },
      "encoding": {
        "x": {
          "aggregate": "count",
          "field": "prizeShare",
          "stack": "zero"
        },
        "y": {
          "field": "category",
          "type": "nominal"
        },
        "color": {
          "type": "nominal",
          "scale": {
            "range": [
              "white"
            ]
          },
          "legend": null
        },
        "text": {
          "aggregate": "count",
          "field": "category",
          "type": "quantitative"
        }
      }
    }
  ],
  "config": {"axis": {"gridColor":"#D6AD60","gridOpacity":0.5,"tickColor":"#D6AD60"},"style": {"cell": {"stroke": "#D6AD60"}},"font": "Lato"}
}